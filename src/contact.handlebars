<section class="contact">
    <div class="box-animation"></div>
    <div class="section-title line-center">Contact</div>
    <div class="section-subtitle bigger">Need a hand ? I have two!</div>
    <div class="section-subtitle"><span title="I value my time, so make it worth it">Have a question</span><span title="I'm available for freelance or fulltime work"> or want to work together?</span></div>
    <form id="contact" action="https://formspree.io/alexcambose1@gmail.com" method="post">
        <div id="hover-style-1">
            <div class="inline-groups">
                <div class="input-group">
                    <input type="text" id="fname" name="First name" required>
                    <label for="fname" ><i class="fa fa-user"></i> <span class="content">First name</span></label>
                </div>
                <div class="input-group">
                    <input type="text" id="lname" name="Last name">
                    <label for="lname"><i class="fa fa-user"></i> <span class="content">Last name</span></label>
                </div>
            </div>
            <div class="input-group">
                <input type="email" id="email" name="_replyto" required>
                <label for="email"><i class="fa fa-envelope"></i> <span class="content">Email</span></label>
            </div>
            <div class="input-group">
                <textarea id="message" rows="4" name="Message" required></textarea>
                <label for="message"><i class="fa fa-comment-alt"></i> <span class="content">Message</span></label>
            </div>
        </div>
        <div id="hover-style-2">
            <div class="input-group">
                <button type="submit"><i class="fa fa-check"></i> <span class="content">Submit</span></button>
            </div>
        </div>
    </form>
</section>